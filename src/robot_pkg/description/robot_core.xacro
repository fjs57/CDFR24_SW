<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="grey">
        <color rgba="0.2 0.2 0.2 1"/>
    </material>

    <material name="brown">
        <color rgba="0.5 0.2 0 1"/>
    </material>

    <link name="base_link">
    </link>

    <joint name="synthetic_mass_joint" type="fixed">
        <parent link="base_link"/>
        <child link="synthetic_mass"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="synthetic_mass">
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0.0 0.0 0.025" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.0007" ixy="0.0" ixz="0.0" iyy="0.0007" iyz="0.0" izz="0.0008"/>
        </inertial>
    </link>

    <!-- CHASSIS -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 ${(65-25+56/2)*1e-3}"/> <!-- 65mm - 50mm/2 : height of the chassis above the motors axles -->
    </joint>


    <link name="chassis">
        <visual>
            <geometry>
                <box size="0.200 0.200 0.056"/>
                <material name="brown"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <box size="0.200 0.200 0.056"/>
                <material name="brown"/>
            </geometry>
        </collision>
    </link>

    <!-- MOTOR WHEELS -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="motor_left_wheel"/>
        <origin xyz="0 0.047 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="motor_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.020"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.020"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0.0 0.0 0.025" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.00007" ixy="0.0" ixz="0.0" iyy="0.00007" iyz="0.0" izz="0.00008"/>
        </inertial>
    </link>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="motor_right_wheel"/>
        <origin xyz="0 -0.047 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="motor_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.020"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.020"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0.0 0.0 0.025" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.00007" ixy="0.0" ixz="0.0" iyy="0.00007" iyz="0.0" izz="0.00008"/>
        </inertial>
    </link>

     <!-- ENCODER WHEELS -->

    <joint name="encoder_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="encoder_left_wheel"/>
        <origin xyz="0 0.071 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="encoder_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.0025"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.020" length="0.0025"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.01"/>
            <origin xyz="0.0 0.0 0.025" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.000007" ixy="0.0" ixz="0.0" iyy="0.000007" iyz="0.0" izz="0.000008"/>
        </inertial>
    </link>

    <gazebo reference="encoder_left_wheel">
        <material>Gazebo/White</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <joint name="encoder_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="encoder_right_wheel"/>
        <origin xyz="0 -0.071 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="encoder_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.0025"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.020" length="0.0025"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.01"/>
            <origin xyz="0.0 0.0 0.025" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.000007" ixy="0.0" ixz="0.0" iyy="0.000007" iyz="0.0" izz="0.000008"/>
        </inertial>
    </link>

    <gazebo reference="encoder_right_wheel">
        <material>Gazebo/White</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <!-- CASTER WHEELS -->

    <joint name="front_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="front_caster_wheel"/>
        <origin xyz="0.080 0 0.0075" rpy="${pi} 0 0"/>
    </joint>

    <link name="front_caster_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.065"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.01" length="0.063"/>
            </geometry>
        </collision>
    </link>

    <gazebo reference="front_caster_wheel">
        <material>Gazebo/Grey</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <joint name="back_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="back_caster_wheel"/>
        <origin xyz="-0.080 0 0.0075" rpy="0 0 0"/>
    </joint>

    <link name="back_caster_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.065"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.01" length="0.063"/>
            </geometry>
        </collision>
    </link>

    <gazebo reference="back_caster_wheel">
        <material>Gazebo/Grey</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>